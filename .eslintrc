{
  "ecmaFeatures": {
    "modules": true
  },
  "parser": "babel-eslint",
  "extends": [
    "standard"
  ],
  "plugins": [
    "babel"
  ],
  "env": {
    "es6": true,
    "browser": true
  },
  "globals": {
    "API_URL": false
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "max-len": [
      2,
      120,
      2,
      {
        "ignoreComments": true
      }
    ],
    "generator-star-spacing": 0,
    "babel/generator-star-spacing": 1,
    "prefer-const": [
      "error",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ],
    "object-curly-spacing": [
      2,
      "always"
    ],
    "no-var": ["error"]
  }
}